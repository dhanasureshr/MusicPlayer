<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"

    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <!-- Song details (e.g., title, artist) -->
        <TextView
            android:id="@+id/textViewSongTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="8dp"
            android:text="Song Title"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewArtist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewSongTitle"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="16dp"
            android:text="Artist"
            android:textSize="18sp" />

        <!-- Music player controls -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewArtist"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <!-- Previous track button -->

            <!-- Play/Pause button -->

            <ImageView
                android:id="@+id/btnPrevious"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?android:attr/selectableItemBackground"
                android:contentDescription="Previous"
                android:src="@drawable/previous_control" />

            <ImageView
                android:id="@+id/btnPlayPause"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:background="?android:attr/selectableItemBackground"
                android:contentDescription="Play/Pause"
                android:src="@drawable/pause_conrol" />

            <!-- Next track button -->
            <ImageView
                android:id="@+id/btnNext"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?android:attr/selectableItemBackground"
                android:contentDescription="Next"
                android:src="@drawable/next_control" />

            <!-- Seek bar for playback progress -->
            <SeekBar
                android:id="@+id/seekBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/btnPlayPause"
                android:layout_marginTop="16dp" />

        </LinearLayout>


    </RelativeLayout>

</RelativeLayout>